UNITS_TO_CHECK=(
  "wpsd-nightly-task.timer"
  "wpsd-running-tasks.timer"
)
CHANGED_TIMERS=()
NEED_GLOBAL_RELOAD=false
for unit in "${UNITS_TO_CHECK[@]}"; do
  NEEDS_RELOAD=$(systemctl show "$unit" --property=NeedDaemonReload 2>/dev/null)
  if [ $? -ne 0 ]; then
    continue
  fi
  if [ "$NEEDS_RELOAD" = "NeedDaemonReload=yes" ]; then
    CHANGED_TIMERS+=("$unit")
    NEED_GLOBAL_RELOAD=true
  else
    :
  fi
done
if [ "$NEED_GLOBAL_RELOAD" = true ]; then
  systemctl daemon-reload
  for timer in "${CHANGED_TIMERS[@]}"; do
    systemctl restart "$timer"
  done
else
  :
fi
# end new auto-task framework

# nightly-task debug test
LOG_MMDVM_NOW="/var/log/pi-star/MMDVM-$(date -u +'%Y-%m-%d').log"
LOG_MMDVM_PREVIOUS="/var/log/pi-star/MMDVM-$(date -u --date="yesterday" +'%Y-%m-%d').log"
LOG_MMDVM_DAY_BEFORE="/var/log/pi-star/MMDVM-$(date -u --date="2 days ago" +'%Y-%m-%d').log"
if find /var/log/pi-star/MMDVM-*.log -print -quit | grep -q .; then
    if ! grep -q "description: " "$LOG_MMDVM_NOW" "$LOG_MMDVM_PREVIOUS" "$LOG_MMDVM_DAY_BEFORE" 2>/dev/null; then
        systemctl restart mmdvmhost.service
        systemctl start wpsd-cache.service
    fi
fi

